<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ConnectWithUs">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/busfoto2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Version:0-0-1-Google"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Data Version: 123"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"
        android:text="BUS-UNI is a Android and Ios applications for tracking the bus and knowing the bus locations ij stations and make a booking for a seat in the bus without waiting in bus"
        android:textAlignment="center"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/website" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="facebookConnectClick"
            android:src="@drawable/facebook_icon" />

        <ImageButton
            android:id="@+id/linkedin_connect_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/connectUScolor"
            android:onClick="linkedConnetClick"
            android:scaleType="centerInside"
            android:src="@drawable/linkedin_icon" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/email_connect_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="emailConnectClick"
            android:src="@drawable/ic_email_blue_24dp" />

        <TextView
            android:id="@+id/emailText_connect_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="emailConnectClick"
            android:text="Email"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call_connect_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="callConnectClick"
            android:src="@drawable/ic_phone_in_talk_black_24dp" />

        <TextView
            android:id="@+id/callText_connect_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="callConnectClick"
            android:text="Call Now"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>